<%- include('../partials/header.ejs') %>

<main>
    <form method="POST" action="/movies/<%= movie.id %>?_method=PUT">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required value="<%= movie.title %>"><br>
        <label for="title">Price:</label>
        <input type="text" id="price" name="price" required value="<%= movie.price %>"><br>
        <label for="title">Condition:</label>
        <select name="condition" required>
            <option disabled selected value> -- Select condition -- </option>
            <option value="new"<% if (movie.condition === "new"){ %>selected<% }; %>>New / Unopened</option>
            <option value="light"<% if (movie.condition === "light"){ %>selected<% }; %>>Lightly Used</option>
            <option value="moderate"<% if (movie.condition === "moderate"){ %>selected<% }; %>>Moderately Used</option>
            <option value="heavy"<% if (movie.condition === "heavy"){ %>selected<% }; %>>Heavily Used</option>
        </select><br>
        <label for="title">Genre:</label>
        <input type="text" id="genre" name="genre" required value="<%= movie.genre %>"><br>
        <label for="title">Details:</label>
        <input type="text" id="details" name="details" required value="<%= movie.details %>"><br>
        
        <button type="submit">Update</button>
    </form>
</main>

<%- include('../partials/footer.ejs') %>